@model MyMVCProject.Models.Models.Supplier
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            margin: 50px;
            width: 50%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <form method="post">
        <table>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" name="Name" value="@Model.Name" />
                </td>
            </tr>
            <tr>
                <td>Code</td>
                <td>
                    <input type="text" name="Code" value="@Model.Code" />
                </td>
            </tr>
            <tr>
                <td>Address</td>
                <td>
                    <input type="text" name="Address" value="@Model.Address" />
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td>
                    <input type="text" name="Email" value="@Model.Email" />
                </td>
            </tr>
            <tr>
                <td>Contact</td>
                <td>
                    <input type="text" name="Contact" value="@Model.Contact" />
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Search" />
                </td>
            </tr>
        </table>
    </form>
    <div>
        <table>
            <thead>
                <tr>
                    <td>Sl</td>
                    <td>Name</td>
                    <td>Code</td>
                    <td>Address</td>
                    <td>Email</td>
                    <td>contact</td>
                </tr>
            </thead>
            <tbody>
                @{int Sl = 1;}

                @foreach (var supplier in Model.Suppliers)
                {
                    <tr>
                        <td>@(Sl++)</td>
                        <td>@supplier</td>
                        <td>@supplier.Address</td>
                        <td>@supplier.Age</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
